<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <include
        android:id="@+id/progress"
        layout="@layout/progress"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/episode_text_view"
        app:layout_constraintEnd_toEndOf="@+id/episode_text_view"
        app:layout_constraintStart_toStartOf="@+id/episode_text_view"
        app:layout_constraintTop_toTopOf="@+id/episode_text_view" />

    <TextView
        android:id="@+id/episode_text_view"
        style="@style/HighlightedTextViews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Episode 123" />

</androidx.constraintlayout.widget.ConstraintLayout>